<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<HBox fx:id="player" alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="0" minWidth="0" prefHeight="70.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.marcfearby.widgets.PlayerController">
    <fx:define>
        <Image fx:id="playImage" url="@/icons/tango/media-playback-start.png" />
        <Image fx:id="pauseImage" url="@/icons/tango/media-playback-pause.png" />
        <Image fx:id="stopImage" url="@/icons/tango/media-playback-stop.png" />
        <Image fx:id="backImage" url="@/icons/tango/media-skip-backward.png" />
        <Image fx:id="forwardImage" url="@/icons/tango/media-skip-forward.png" />
    </fx:define>
   <children>
      <Button fx:id="playButton" mnemonicParsing="false">
          <graphic>
              <ImageView image="$playImage"/>
          </graphic>
      </Button>
      <Button fx:id="pauseButton" mnemonicParsing="false">
           <graphic>
               <ImageView image="$pauseImage"/>
           </graphic>
      </Button>
   </children>
</HBox>
